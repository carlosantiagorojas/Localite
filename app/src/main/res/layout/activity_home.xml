<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/include_top_bar"
        layout="@layout/home_top_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"/>

    <!-- Nuevo LinearLayout agregado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/include_top_bar">


        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         >

        </SearchView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnCategorias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Categorias"
                android:backgroundTint="@color/orange_light"/>

            <Button
                android:id="@+id/btnCercanos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Mas cercanos"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/orange_light"/>

        </LinearLayout>

        <!-- Agregando la CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#FFFF"
            app:cardElevation="4dp">

            <!-- LinearLayout con orientación vertical para colocar los elementos uno debajo del otro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- ImageView para la imagen -->
                <ImageView
                    android:id="@+id/cerroMonserrate"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/cerro_monserrate" />

                <!-- TextView para el título -->

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cerro de Monserrate"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/orange_main"/>

                <TextView
                    android:id="@+id/subtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historicos y culturales"
                    android:textSize="15sp"
                    android:textColor="@color/blue"/>

                <TextView
                    android:id="@+id/distancia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distancia de 1 km para llegar"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="El cerro de Monserrate es el más conocido de los cerros Orientales de Bogotá. Monserrate tiene una altitud de 3152 m y se ubica sobre la cordillera oriental" />

                <Button
                    android:id="@+id/btnDescubrir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descubrir"
                    android:backgroundTint="@color/orange_light"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                 />


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <include
        android:id="@+id/include_bottom_bar"
        layout="@layout/home_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
