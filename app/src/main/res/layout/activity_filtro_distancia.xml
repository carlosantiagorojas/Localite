<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiltroDistanciaActivity">

    <RelativeLayout
        android:id="@+id/topBarFiltroDistancia"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/izquierdaFiltroDistancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/baseline_arrow_back" />

        <TextView
            android:id="@+id/tituloFiltroDistancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="25dp"
            android:layout_toEndOf="@id/izquierdaFiltroDistancia"
            android:fontFamily="@font/roboto_bold"
            android:text="Lugares mas cercanos"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/descFiltroDistancia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Elige a cuantos kilometros de distancia"
        android:textSize="20sp"
        android:textColor="@color/orange_main"
        android:gravity="center_horizontal"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/topBarFiltroDistancia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderFiltroDistancia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/descFiltroDistancia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:valueFrom="1.0"
        android:valueTo="100.0"
        android:value="25.0"
        app:trackColorInactive="@color/gray"
        app:trackColorActive="@color/orange_main"
        app:thumbColor="@color/orange_main"
        app:thumbStrokeColor="@color/orange_main"
        app:haloColor="@color/orange_light"
        app:labelStyle="@style/SliderStyle"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sliderFiltroDistancia"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="4dp"
                android:id="@+id/cartaFiltroDistancia">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/cerroMonserrate"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/cerro_monserrate" />

                    <TextView
                        android:id="@+id/titulo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cerro de Monserrate"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/orange_main"/>

                    <TextView
                        android:id="@+id/subtitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Históricos y culturales"
                        android:textSize="15sp"
                        android:textColor="@color/blue"/>

                    <TextView
                        android:id="@+id/distancia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distancia de 1 km para llegar"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="El cerro de Monserrate es el más conocido de los cerros Orientales de Bogotá. Monserrate tiene una altitud de 3152 m y se ubica sobre la cordillera oriental" />

                    <Button
                        android:id="@+id/btnDescubrirFiltroDistancia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descubrir"
                        android:backgroundTint="@color/orange_light"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cartaFiltroDistancia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/cerroMonserrate2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/cerro_monserrate" />

                    <TextView
                        android:id="@+id/titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cerro de Monserrate 2 (testing purposes :) )"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/orange_main"/>

                    <TextView
                        android:id="@+id/subtitulo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Históricos y culturales"
                        android:textSize="15sp"
                        android:textColor="@color/blue"/>

                    <TextView
                        android:id="@+id/distancia2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distancia de 1 km para llegar"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/descripcion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="El cerro de Monserrate es el más conocido de los cerros Orientales de Bogotá. Monserrate tiene una altitud de 3152 m y se ubica sobre la cordillera oriental" />

                    <Button
                        android:id="@+id/btnDescubrirFiltroDistancia2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descubrir"
                        android:backgroundTint="@color/orange_light"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/homeIconFiltroDistancia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/baseline_home_24" />

        <ImageView
            android:id="@+id/accountIconFiltroDistancia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/baseline_account_circle_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
